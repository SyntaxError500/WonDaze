<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Edit a Listing</h3>
                <form action="/listings/<%= card._id %>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" class="form-control" value="<%= card.title%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="file" name="listing[image]" class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label ">Price</label>
                            <input type="number" name="listing[price]" class="form-control" value="<%= card.price%>" required>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label ">Country</label>
                            <input type="text" name="listing[country]" class="form-control" value="<%= card.country%>" required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" class="form-control" value="<%= card.location%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" rows="8" cols="50" class="form-control"
                            value="<%= card.description%>" required><%= card.description%></textarea>
                    </div>
                    <button class="btn btn-outline-danger mt-4">Add</button>
                </form>
            </div>
        </div>
    </body>