<% layout("/layouts/loginboiler.ejs") %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 shadow-lg p-4 rounded-4 bg-white">
      
      <h2 class="text-center mb-4" style="color: #cf146f;">L O G I N</h2>
      
      <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <input type="text" name="username" class="form-control form-control-lg" placeholder="Username" required>
        </div>
        <div class="mb-3">
          <input type="password" name="password" class="form-control form-control-lg" placeholder="Password" required>
        </div>

        <div class="form-check mb-3 d-flex justify-content-between align-items-center">
          <div>
            <input class="form-check-input" type="checkbox" id="checkChecked">
            <label class="form-check-label" for="checkChecked" style="color: #cf146f;">
              Accept Terms
            </label>
          </div>
          <a href="#" style="color: #cf146f;">Forgot Password?</a>
        </div>

        <button type="submit" class="btn w-100 text-white mb-3" style="background-color: #cf146f;">
          Sign In
        </button>
      </form>

      <hr>

      <p class="text-center mb-3">OR CONTINUE WITH</p>
      <div class="d-flex justify-content-around mb-3">
        <a href="#" class="text-decoration-none">
          <i class="fa-brands fa-facebook fa-lg" style="color: #1a20c1;"></i> Facebook
        </a>
        <a href="#" class="text-decoration-none">
          <i class="fa-brands fa-x-twitter fa-lg" style="color: #000000;"></i> Twitter
        </a>
        <a href="#" class="text-decoration-none">
          <i class="fa-brands fa-github fa-lg" style="color: #0a0a0a;"></i> Github
        </a>
      </div>

      <div class="text-center">
        <a href="/signup" class="text-decoration-none" style="color: #cf146f;">New here? Create an account</a>
      </div>

    </div>
  </div>
</div>
